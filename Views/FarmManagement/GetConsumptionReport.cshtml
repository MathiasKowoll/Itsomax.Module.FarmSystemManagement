@model GenerateConsumptionReportViewModel

<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-body">
                    <form autocomplete="off" class="form-horizontal  p-t-20" method="post" asp-controller="FarmManagement" asp-action="GetConsumptionReport">
                        <h3 class="box-title">Generate Report</h3>
                        <hr class="m-t-0 m-b-40">
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Select Date</label>
                            <div class="col-sm-2">
                                <div class="input-group clockpicker">
                                    <input id="datepicker-autoclose" asp-for="ConsumptionDate" type="text" class="form-control" placeholder="mm/dd/yyyy">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <span asp-validation-for="ConsumptionDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Put Folio</label>
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <input id="name" asp-for="Folio" type="text" class="form-control" placeholder="Put Folio">
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <span asp-validation-for="Folio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-info"> <i class="fa fa-check waves-effect waves-light"></i> Generate</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @if(ViewBag.Url != "")
    {
    <!-- sample modal content -->
    <div id="downloadModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Your Report is ready</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <a href="@ViewBag.Url">Download Report</a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info waves-effect" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    }
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script type="text/javascript">$('#downloadModal').modal('show');</script>

    <script>
        jQuery('#datepicker-autoclose').datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'mm/dd/yyyy',
        });
    </script>
} 