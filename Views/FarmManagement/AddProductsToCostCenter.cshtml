@model ProductCostCenterViewModel

<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-header">
                    <h2 class="m-b-0 text-themecolor">Assign Products to Cost Center</h2>
                </div>
                <div class="card-body">
                    <form autocomplete="off" class="form-horizontal  p-t-20" asp-controller="FarmManagement" asp-action="AddProductsToCostCenterPost" method="Post">
                        <h3 class="box-title">Activity Details</h3>
                        <hr class="m-t-0 m-b-40">
                        <div class="form-group row">
                            <input asp-for="CostCenterId" type="hidden" class="form-control"/>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Cost Center Name</label>
                            <div class="col-sm-4">
                                <p class="form-control-static"> @ViewBag.Name </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Cost Center Code</label>
                            <div class="col-sm-4">
                                <p class="form-control-static"> @ViewBag.Code </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Activity Name</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input id="name" asp-for="Name" type="text" class="form-control" placeholder="Activity Name">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-sm-2 text-right" asp-for="Active" for="active"></label>
                            <div class="col-sm-4">
                                <div class="checkbox checkbox-info">
                                    <input asp-for="Active" type="checkbox" id="active"/>
                                    <label for="active"></label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="Active"></span>
                            </div>
                        </div>
                        <h3 class="box-title">Assign Location To activity</h3>
                        <hr class="m-t-0 m-b-40">
                        <div class="form-group row align-items-center">
                            <div class="col-md-10 ml-md-auto">
                                @foreach (var item in Model.Products)
                                {
                                    <div class="checkbox checkbox-info">
                                        <input id="@item.Value" type="checkbox" name="selectedProducts" value="@item.Value" checked="@item.Selected">
                                        <label for="@item.Value">@item.Value</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right"></label>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-info"> <i class="fa fa-check waves-effect waves-light"></i> Save</button>
                                <a asp-controller="FarmManagement" asp-action="ListCostCenter" class="btn btn-info waves-effect waves-light">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}