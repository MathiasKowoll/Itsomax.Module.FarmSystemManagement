@model CostCenterViewModel

<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-body">
                    <form class="form-horizontal  p-t-20" asp-controller="FarmManagement" asp-action="AddCostCenter" method="Post">
                        <h3 class="box-title">Cost Center Details</h3>
                        <hr class="m-t-0 m-b-40">
                        <div class="form-group row">
                            <label for="code" class="control-label col-sm-2 text-right">Cost Center Code</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input id="name" asp-for="Code" type="text" class="form-control" placeholder="Cost Center Code">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Cost Center Name</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input id="name" asp-for="Name" type="text" class="form-control" placeholder="Cost Center Name">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Warehouse Code</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input id="name" asp-for="WarehouseCode" type="text" class="form-control" placeholder="Warehouse Code">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="WarehouseCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-sm-2 text-right" asp-for="Active" for="active"></label>
                            <div class="col-sm-4">
                                <div class="checkbox checkbox-info">
                                    <input asp-for="Active" type="checkbox" id="active" />
                                    <label for="active"></label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="Active"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-sm-2 text-right">Description</label>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <textarea asp-for="Description" class="form-control" placeholder="Description" rows="5" cols="8"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label class="control-label col-sm-2 text-right">Locations</label>
                            <div class="col-sm-4">
                                <select class="form-control custom-select" asp-for="LocationId" asp-items="@(new SelectList(@ViewBag.LocationList, "LocationId", "LocationName","Selected"))"></select>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-info"> <i class="fa fa-check waves-effect waves-light"></i> Save</button>
                            <a asp-controller="FarmManagement" asp-action="ListCostCenter" class="btn btn-info waves-effect waves-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}