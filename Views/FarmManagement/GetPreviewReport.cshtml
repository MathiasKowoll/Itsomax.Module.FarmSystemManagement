@model GenerateConsumptionReportViewModel

<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-outline-info">
                <div class="card-header bg-theme">
                    <h2 class="m-b-0 text-white">Consumption Report by Date</h2>
                </div>
                <div class="card-body">
                    <form autocomplete="off" class="form-horizontal  p-t-20" method="post" asp-controller="FarmManagement" asp-action="PreviewReport">
                        <h3 class="box-title">Generate Report</h3>
                        <hr class="m-t-0 m-b-40">
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Select From Date</label>
                            <div class="col-sm-2">
                                <div class="input-group clockpicker">
                                    <input id="datepicker-autoclose" asp-for="FromConsumptionDate" type="text" class="form-control" placeholder="yyyy/mm/dd">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <label for="name" class="control-label col-sm-2 text-right">Select To Date</label>
                            <div class="col-sm-2">
                                <div class="input-group clockpicker">
                                    <input id="datepicker-autoclose2" asp-for="ToConsumptionDate" type="text" class="form-control" placeholder="yyyy/mm/dd">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <span asp-validation-for="FromConsumptionDate" class="text-danger"></span>
                                <span asp-validation-for="ToConsumptionDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label class="control-label col-sm-2 text-right">Warehouse</label>
                            <div class="col-sm-4">
                                <select class="form-control custom-select" asp-for="WarehouseName" asp-items="@(new SelectList(@ViewBag.WarehouseList, "WarehouseName", "WarehouseName", "Selected"))"></select>
                            </div>
                        </div>
                        <!--
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right">Put Folio</label>
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <input id="name" asp-for="Folio" type="text" class="form-control" placeholder="Put Folio">
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <span asp-validation-for="Folio" class="text-danger"></span>
                            </div>
                        </div>
                        -->
                        <div class="form-group row">
                            <label for="name" class="control-label col-sm-2 text-right"></label>
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-info"> <i class="fa fa-check waves-effect waves-light"></i> Generate</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script type="text/javascript">$('#downloadModal').modal('show');</script>

    <script>
        jQuery('#datepicker-autoclose').datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'yyyy/mm/dd'
        });
        jQuery('#datepicker-autoclose2').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'yyyy/mm/dd'
        });
    </script>
} 